<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Resources.Styles.DarkTheme">

    <!-- Primary colors -->
    <Color x:Key="PrimaryColor">#1E1E1E</Color>
    <Color x:Key="AccentColor">#BB86FC</Color>

    <!-- Page background -->
    <Color x:Key="PageBackgroundColor">#121212</Color>
    <Color x:Key="CardBackgroundColor">#1E1E1E</Color>

    <!-- Text colors -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#CCCCCC</Color>

    <!-- Favorites styling -->
    <Color x:Key="FavoriteBackgroundColor">#333333</Color>
    <Color x:Key="FavoriteIconColor">#BB86FC</Color>
    
    <!-- Placeholder text color -->
    <Color x:Key="PlaceholderTextColor">#AAAAAA</Color>
    
    <!-- Card Border -->
    <Color x:Key="CardBorderColor">#444444</Color>

    <!-- Button Background Color -->
    <Color x:Key="ButtonBackgroundColor">#B22222</Color>

</ResourceDictionary>