<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Resources.Styles.LightTheme">

    <!-- Primary colors -->
    <Color x:Key="PrimaryColor">#D2B48C</Color>
    <Color x:Key="AccentColor">#B22222</Color>

    <!-- Page background -->
    <Color x:Key="PageBackgroundColor">#FFF5E6</Color>
    <Color x:Key="CardBackgroundColor">#FFEEDD</Color>

    <!-- Text colors -->
    <Color x:Key="PrimaryTextColor">#000000</Color>
    <Color x:Key="SecondaryTextColor">#555555</Color>

    <!-- Favorites styling -->
    <Color x:Key="FavoriteBackgroundColor">#FFB3B3</Color>
    <Color x:Key="FavoriteIconColor">#B22222</Color>

    <!-- Placeholder text color -->
    <Color x:Key="PlaceholderTextColor">#777777</Color>

    <!-- Card Border -->
    <Color x:Key="CardBorderColor">#FFFFFF</Color>

</ResourceDictionary>