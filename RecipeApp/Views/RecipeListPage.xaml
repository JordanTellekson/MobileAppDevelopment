<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RecipeApp.ViewModels"
             xmlns:conv="clr-namespace:RecipeApp.Converters"
             x:Class="RecipeApp.Views.RecipeListPage"
             x:Name="PageRoot"
             Title="Recipes"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:AuthorToButtonVisibilityConverter x:Key="AuthorToButtonVisibilityConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddRecipeCommand}" />
        <ToolbarItem Text="Favorites" Command="{Binding NavigateToFavoritesCommand}" />
        <ToolbarItem x:Name="ThemeToggleButton" 
                 Text="{Binding ThemeButtonText}" 
                 Command="{Binding ToggleThemeCommand}" />
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="RecipeCollection" ItemsSource="{Binding Recipes}">
        <CollectionView.EmptyView>
            <StackLayout Padding="20">
                <Label Text="No recipes available." 
                       FontSize="18" 
                       TextColor="{DynamicResource SecondaryTextColor}" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </StackLayout>
        </CollectionView.EmptyView>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <!-- SwipeView triggers AddToFavoritesCommand on swipe release -->
                <SwipeView SwipeEnded="OnSwipeEnded">
                    <SwipeView.RightItems>
                        <!-- Transparent SwipeItem ensures swipe is recognized -->
                        <SwipeItems Mode="Reveal">
                            <SwipeItem Text="Favorite" BackgroundColor="Transparent" IsEnabled="False"/>
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Frame Margin="10" Padding="10" CornerRadius="12" HasShadow="True"
                           BackgroundColor="{DynamicResource CardBackgroundColor}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding BindingContext.RecipeTappedCommand, Source={x:Reference RecipeCollection}}"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>

                        <StackLayout>
                            <Image Source="{Binding ImageUrl}" HeightRequest="150" Aspect="AspectFill"/>
                            <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding Description}" FontSize="14"
                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                            <Label Text="{Binding Author, StringFormat='By: {0}'}" FontSize="18"
                                   TextColor="{DynamicResource PrimaryTextColor}" />

                            <Button Text="Update"
                                    IsVisible="{Binding Author, 
                                    Converter={StaticResource AuthorToButtonVisibilityConverter}, 
                                    ConverterParameter={x:Reference PageRoot}}" 
                                    Command="{Binding BindingContext.UpdateRecipeCommand, Source={x:Reference RecipeCollection}}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                                    TextColor="{DynamicResource ButtonTextColor}" />
                        </StackLayout>
                    </Frame>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>