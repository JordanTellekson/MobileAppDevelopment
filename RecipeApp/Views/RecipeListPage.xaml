<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RecipeApp.ViewModels"
             xmlns:conv="clr-namespace:RecipeApp.Converters"
             x:Class="RecipeApp.Views.RecipeListPage">

    <!-- Page Resources -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:AuthorToButtonVisibilityConverter x:Key="AuthorToButtonVisibilityConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- BindingContext -->
    <ContentPage.BindingContext>
        <vm:RecipeListViewModel />
    </ContentPage.BindingContext>

    <!-- Toolbar -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddRecipeCommand}" />
    </ContentPage.ToolbarItems>

    <!-- Recipe List -->
    <CollectionView ItemsSource="{Binding Recipes}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" CornerRadius="12" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecipeListViewModel}}, Path=RecipeTappedCommand}" 
                                              CommandParameter="{Binding .}" />
                    </Frame.GestureRecognizers>

                    <StackLayout>
                        <Image Source="{Binding ImageUrl}" HeightRequest="150" Aspect="AspectFill"/>
                        <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="{Binding Description}" FontSize="14" TextColor="Gray"/>
                        <Label Text="{Binding Author, StringFormat='By: {0}'}"
                           FontSize="18"
                           TextColor="Black" />

                        <!-- Update Button -->
                        <Button Text="Update"
                                IsVisible="{Binding Author, Converter={StaticResource AuthorToButtonVisibilityConverter}}"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecipeListViewModel}}, Path=UpdateRecipeCommand}"
                                CommandParameter="{Binding .}" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>