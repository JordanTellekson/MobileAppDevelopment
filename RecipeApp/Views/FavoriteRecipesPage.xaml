<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RecipeApp.ViewModels"
             x:Class="RecipeApp.Views.FavoriteRecipesPage"
             x:Name="PageRoot"
             Title="Favorites"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <CollectionView x:Name="FavoritesCollection" ItemsSource="{Binding Favorites}">
        <CollectionView.EmptyView>
            <StackLayout Padding="20">
                <Label Text="No favorites yet."
                       FontSize="18"
                       TextColor="{DynamicResource SecondaryTextColor}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </StackLayout>
        </CollectionView.EmptyView>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <!-- SwipeView triggers RemoveFromFavoritesCommand on swipe release -->
                <SwipeView SwipeEnded="OnSwipeEnded">
                    <SwipeView.RightItems>
                        <!-- Transparent SwipeItem ensures swipe is recognized -->
                        <SwipeItems Mode="Reveal">
                            <SwipeItem Text="Remove" BackgroundColor="Transparent" IsEnabled="False"/>
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Frame Margin="10" Padding="10" CornerRadius="12" HasShadow="True"
                   BackgroundColor="{DynamicResource CardBackgroundColor}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                        Command="{Binding BindingContext.RecipeTappedCommand, Source={x:Reference FavoritesCollection}}"
                        CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>

                        <StackLayout>
                            <Grid>
                                <Image Source="{Binding ImageUrl}" HeightRequest="150" Aspect="AspectFill"/>
                                <Label Text="â™¥"
                               FontSize="24"
                               TextColor="Red"
                               HorizontalOptions="End"
                               VerticalOptions="Start"
                               Margin="5"/>
                            </Grid>

                            <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding Description}" FontSize="14"
                           TextColor="{DynamicResource SecondaryTextColor}"/>
                            <Label Text="{Binding Author, StringFormat='By: {0}'}" FontSize="18"
                           TextColor="{DynamicResource PrimaryTextColor}" />
                        </StackLayout>
                    </Frame>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>