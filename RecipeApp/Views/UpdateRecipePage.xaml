<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Views.UpdateRecipePage"
             Title="Update Recipe"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <Entry Placeholder="Title" 
                   PlaceholderColor="{DynamicResource PlaceholderTextColor}"
                   Text="{Binding Title}" 
                   BackgroundColor="{DynamicResource EntryBackgroundColor}" 
                   TextColor="{DynamicResource PrimaryTextColor}" />

            <Editor Placeholder="Description" 
                    PlaceholderColor="{DynamicResource PlaceholderTextColor}"
                    Text="{Binding Description}" 
                    HeightRequest="60"
                    BackgroundColor="{DynamicResource EntryBackgroundColor}" 
                    TextColor="{DynamicResource PrimaryTextColor}" />

            <Entry Placeholder="Image URL" 
                   PlaceholderColor="{DynamicResource PlaceholderTextColor}"
                   Text="{Binding ImageUrl}" 
                   BackgroundColor="{DynamicResource EntryBackgroundColor}" 
                   TextColor="{DynamicResource PrimaryTextColor}" />

            <Entry Placeholder="Cooking Time (minutes)" 
                   PlaceholderColor="{DynamicResource PlaceholderTextColor}"
                   Keyboard="Numeric" 
                   Text="{Binding CookingTimeMinutes}" 
                   BackgroundColor="{DynamicResource EntryBackgroundColor}" 
                   TextColor="{DynamicResource PrimaryTextColor}" />

            <Editor Placeholder="Ingredients (comma-separated)" 
                    PlaceholderColor="{DynamicResource PlaceholderTextColor}"
                    Text="{Binding Ingredients}" 
                    HeightRequest="80"
                    BackgroundColor="{DynamicResource EntryBackgroundColor}" 
                    TextColor="{DynamicResource PrimaryTextColor}" />

            <Editor Placeholder="Instructions" 
                    PlaceholderColor="{DynamicResource PlaceholderTextColor}"
                    Text="{Binding Instructions}" 
                    HeightRequest="120"
                    BackgroundColor="{DynamicResource EntryBackgroundColor}" 
                    TextColor="{DynamicResource PrimaryTextColor}" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Save" 
                        Command="{Binding SaveCommand}" 
                        BackgroundColor="{DynamicResource ButtonBackgroundColor}" 
                        TextColor="{DynamicResource ButtonTextColor}" 
                        CornerRadius="8" />

                <Button Text="Cancel" 
                        Command="{Binding CancelCommand}" 
                        BackgroundColor="{DynamicResource ButtonBackgroundColor}" 
                        TextColor="{DynamicResource ButtonTextColor}" 
                        CornerRadius="8" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>